@using TestDISC.Models.UtilsProject;

@{
    int indexRow;
    int middleValue = 12;
    var leastGraph = Utils.BuildTableGraphLeast();
}

<div class="row nature__container">
    <svg id="full-least" class="graph-container"></svg>
    <div class="col-3 nature__box nature__box--D">
        <div class="nature__box--title">
            <div class="row">
                <div class="nature__title">
                    <div class="nature__title-text">D</div>
                </div>
            </div>
        </div>
        <div class="nature__col nature__col--D">
            <div class="nature__line nature__line--D"></div>
            @{
                indexRow = 0;

                foreach (var row in leastGraph)
                {
                    <div class="row">
                        @if (row.D > -1)
                        {
                            <div id="@("LD" + @row.D)" style="visibility: hidden;">@row.D</div>
                        }
                        else
                        {
                            <div style="visibility: hidden;">@row.D</div>
                        }
                    </div>

                    if (indexRow == middleValue)
                    {
                        <div class="col-characters__middle"></div>
                    }

                    indexRow++;
                }
            }
        </div>
    </div>
